<?xml version="1.0" encoding="utf-8"?>
<com.yadong.huawei.module.widget.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    app:rv_listMode="true"
    app:rv_rippleDuration="1000"
    android:layout_marginLeft="@dimen/cs_16_dp"
    app:rv_type="rectangle">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backgound_fcfcfc"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="60.0dp"
            android:layout_height="60.0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4.0dp"
            android:background="@drawable/icon_default_bg"
            android:focusable="false"/>

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:singleLine="true"
            android:text="微博"
            android:layout_gravity="center"
            android:textColor="@color/title_name_black"
            android:textSize="@dimen/res_textsize_14sp"/>

        <TextView
            android:id="@+id/tv_app_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:text="71.3M"
            android:textColor="@color/push_app_size_color"
            android:textSize="@dimen/res_textsize_12sp"/>

    </LinearLayout>

</com.yadong.huawei.module.widget.RippleView>
